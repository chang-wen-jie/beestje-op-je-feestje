@using BeestjeOpJeFeestje.Web.ViewModels.Booking
@model BookingAnimalFormViewModel

@{
    ViewData["Title"] = "Beestje Boeken";
}

<div class="container mt-4">
    <div class="progress mb-4" role="progressbar" aria-label="Example with label" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-bar" style="width: 0"></div>
    </div>

    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <span class="fw-bold">Stap 1 - Kies je beestje(s)</span>
                </div>

                <div class="card-body">
                    <form asp-action="Step1" method="post">
                        <div asp-validation-for="SelectedAnimalIds" class="text-danger"></div>

                        <div class="row">
                            @foreach (var animal in Model.AvailableAnimals)
                            {
                                <div class="col-md-2 mb-3">
                                    <label for="selectedAnimals_@animal.Id" class="card text-center">
                                        <div class="card-header">
                                            <span class="fw-bold">@animal.Name</span>
                                            <p class="card-text">@animal.Price.ToString("C")</p>
                                            <input name="SelectedAnimalIds" value="@animal.Id" type="checkbox" class="form-check-input"
                                                   style="cursor: pointer;" checked="@(Model.SelectedAnimalIds.Contains(animal.Id) ? "checked" : "")" />


                                        </div>
                                        <div class="card-body">
                                            <img src="@Url.Content("~/img/" + animal.ImageUrl)" alt="@animal.Name" style="height: 100px"/>
                                        </div>
                                    </label>
                                </div>
                            }
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Terug</a>
                            <button type="submit" class="btn btn-primary">Volgende</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <span class="fw-bold">Boeking</span>
                </div>
                
                <div class="card-body">
                    <span>Datum: @Model.BookingFormState.Date</span>
                    <hr/>
                    <p>Beestje(s):</p>
                    
                    @if (!Model.BookingFormState.Animals.Any())
                    {
                        <p class="fst-italic">Geen beestjes gekozen</p>
                    }
                    
                    @foreach (var animal in Model.BookingFormState.Animals)
                    {
                        <img class="border" alt="@animal.Name" style="height: 50px;" src="@Url.Content("~/img/" + animal.ImageUrl)">
                    }
                </div>
            </div>
        </div>
    </div>
</div>


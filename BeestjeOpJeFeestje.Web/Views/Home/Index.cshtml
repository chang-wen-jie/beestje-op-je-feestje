@{
    ViewData["Title"] = "Over Ons";
}

<div class="container mt-4">
    <div class="row d-flex align-items-center">
        <div class="col-md-6">
            <h1 class="mb-4">Een beestje voor op je feestje?</h1>
            <div class="card">

                <div class="card-header">
                    <span>
                        Bij BeestjeOpJeFeestje kun je gemakkelijk dieren boeken voor al jouw speciale gelegenheden!
                    </span>
                </div>

                <div class="card-body">
                    <div class="row">
                        <p>Het boekingsproces gaat zo snel als een haas...</p>
                        
                        <ul class="list-unstyled">
                            <li><span class="badge bg-primary me-2">1</span>Kies een boekingsdatum</li>
                            <li><span class="badge bg-primary me-2">2</span>Selecteer je beestjes</li>
                            <li><span class="badge bg-primary me-2">3</span>Voer je contactinformatie in</li>
                            <li><span class="badge bg-primary me-2">4</span>Bevestig de boeking</li>
                        </ul>
                        
                        <div class="mt-4 d-flex gap-2">
                            <a asp-controller="Booking" asp-action="Step1" class="btn btn-primary">Ik wil mijn beestje!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 ms-5">
            <img src="@Url.Content("~/img/farm/farm.png")" alt="Farm" style="height: 600px"/>
        </div>
    </div>
</div>

@using BeestjeOpJeFeestje.Web.ViewModels.Account
@model IEnumerable<AccountViewModel>

@{
    ViewData["Title"] = "Accounts";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Alle accounts (@Model.Count())</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    
    <table class="table table-bordered table-striped text-center">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Naam</th>
            <th>Klantenkaart</th>
            <th>Acties</th>
        </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td class="text-center">Geen accounts gevonden</td>
            </tr>
        }

        @foreach (var account in Model)
        {
            <tr>
                <td>@account.Id</td>
                <td>@account.Name</td>
                <td>@account.TypeId</td>
                <td>
                    <a asp-action="Details" asp-route-accountId="@account.Id" class="btn btn-secondary btn-sm">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="Create" class="btn btn-success">Account Toevoegen</a>
    </div>
</div>
